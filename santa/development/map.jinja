# -*- coding: utf-8 -*-
# vim: ft=jinja

{% import_yaml 'santa/development/defaults.yaml' as default_settings %}

{% set os_family_map = salt['grains.filter_by']({
        'Debian': {},
        'Suse': {},
        'Arch': {},
        'RedHat': {},
  }
  , grain="os_family"
  , merge=salt['pillar.get']('santa:development:lookup'))
%}
{% do default_settings.santa.update(os_family_map) %}

{% set santa = salt['pillar.get'](
        'santa:development',
        default=default_settings.santa,
        merge=True
    )
%}
